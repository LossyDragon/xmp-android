<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plist_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/plist_image"
        style="@style/ListTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:contentDescription="@string/desc_plist_image"
        tools:src="@drawable/ic_file" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plist_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="?colorOnSurface"
            android:textSize="19sp"
            tools:text="plist_title" />

        <TextView
            android:id="@+id/plist_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="?colorOnSurface"
            android:textSize="13sp"
            tools:text="plist_info" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/plist_handle"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/desc_plist_drag"
            android:tint="?colorOnSurface"
            app:srcCompat="@drawable/ic_drag" />

    </FrameLayout>

</LinearLayout>