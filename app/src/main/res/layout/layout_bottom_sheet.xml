<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_controls"
    style="@style/SidebarTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/SidebarSectionTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sheet_details" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <TextView
            style="@style/SidebarDetailsTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sheet_patterns" />

        <TextView
            android:id="@+id/sidebar_num_pat"
            style="@style/SidebarDetailsTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="00" />

        <TextView
            style="@style/SidebarDetailsTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sheet_instruments" />

        <TextView
            android:id="@+id/sidebar_num_ins"
            style="@style/SidebarDetailsTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="00" />

        <TextView
            style="@style/SidebarDetailsTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sheet_samples" />

        <TextView
            android:id="@+id/sidebar_num_smp"
            style="@style/SidebarDetailsTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="00" />

        <TextView
            style="@style/SidebarDetailsTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sheet_channels" />

        <TextView
            android:id="@+id/sidebar_num_chn"
            style="@style/SidebarDetailsTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="00" />
    </GridLayout>

    <Switch
        android:id="@+id/sidebar_allseqs_switch"
        style="@style/SidebarSectionTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/sheet_button_allseqs" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/sidebar_sequences"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

</LinearLayout>