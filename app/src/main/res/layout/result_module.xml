<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    tools:context=".modarchive.result.ModuleResult">

    <ProgressBar
        android:id="@+id/result_spinner"
        style="?android:progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        app:layout_constraintBottom_toTopOf="@+id/result_layout_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/result_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <ScrollView
                android:id="@+id/result_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/module_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/result_title"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/module_filename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="filename" />

                    <TextView
                        android:id="@+id/module_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        tools:text="info" />

                    <TextView
                        android:id="@+id/module_license"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        tools:text="license" />

                    <TextView
                        android:id="@+id/module_license_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        tools:text="license description" />

                    <TextView
                        android:id="@+id/module_instruments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:typeface="monospace"
                        tools:text="instruments" />

                    <TextView
                        android:id="@+id/module_sponsor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="12sp"
                        tools:text="sponsor" />
                </LinearLayout>
            </ScrollView>

            <include layout="@layout/layout_error" />

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/result_layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/module_button_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            tools:text="@string/result_play" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/module_button_random"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_random_title"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
