    <style name="StatusTheme" parent="AppTheme">
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="SidebarTheme" parent="AppTheme">
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>

    <style name="SidebarDetailsTheme" parent="AppTheme">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>

    <style name="SidebarSequenceTheme" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>

    <style name="SidebarSectionTheme" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/section_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
